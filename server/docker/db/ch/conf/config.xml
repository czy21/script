<?xml version="1.0"?>
<yandex>
    <listen_host>0.0.0.0</listen_host>
    <mysql_port>9004</mysql_port>
    <remote_servers>
        <cluster>
            {%- for i in range(1,param_db_clickhouse_cluster_replicas | int + 1) %}
            <shard>
                <replica>
                    <host>{{ param_role_name }}-{{ i }}</host>
                    <port>9000</port>
                    <user>{{ param_db_ch_username }}</user>
                    <password>{{ param_db_ch_password }}</password>
                </replica>
            </shard>
            {%- endfor %}
        </cluster>
    </remote_servers>

    <zookeeper>
        <node index="1">
            <host>{{ param_db_zk_host }}</host>
            <port>2181</port>
        </node>
    </zookeeper>

    <networks>
        <ip>::/0</ip>
    </networks>

    <macros>
        <shard>01</shard>
        <replica>{{ param_role_name }}-1</replica>
    </macros>

    <clickhouse_compression>
        <case>
            <min_part_size>10000000000</min_part_size>
            <min_part_size_ratio>0.01</min_part_size_ratio>
            <method>lz4</method>
        </case>
    </clickhouse_compression>

</yandex>